{
  "manifest_version": 2,

  "name": "Weber Saint-Gobain",
  "description": "This extension will allow you to quickly navigate between websites countries Weber Saint Gobain group.",
  "version": "1.0.1",
  "permissions": [ 
    "tabs",
    "unlimitedStorage",
    "http://*/",
    "https://*/"
  ], 
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "icon.png",
    "icon-large.png",
    "icon-small.png"
  ],
  "icons": {
    "16": "icon-bitty.png",
    "26": "icon.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "default_locale": "fr",
  "background": { 
    "scripts": ["js/jquery.min.js","js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  }
}